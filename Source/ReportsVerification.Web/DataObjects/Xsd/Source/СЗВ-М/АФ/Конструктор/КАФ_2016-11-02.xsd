				<xs:complexType>
					<xs:sequence>
						<xs:element name="Преобразование" maxOccurs="unbounded">
							<xs:annotation>
								<xs:documentation>Путь до файла xslt-преобразования</xs:documentation>
							</xs:annotation>
							<xs:complexType>
								<xs:simpleContent>
									<xs:extension base="АФ:XSLФайл">
										<xs:attribute name="Тип" use="required">
											<xs:annotation>
												<xs:documentation>Тип преобразования</xs:documentation>
